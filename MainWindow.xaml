        <Label Content="Usuario:" HorizontalAlignment="Left" Margin="164,112,0,0" VerticalAlignment="Top" Foreground="Black" Height="60" Width="140" FontSize="36"/>
        <PasswordBox x:Name="PasswodBox1" HorizontalAlignment="Left" Margin="325,197,0,0" VerticalAlignment="Top" Width="205" Height="40" FontSize="28"/>
        <Button x:Name="ButtonIngresar" Content="Ingresar" HorizontalAlignment="Left" Margin="164,321,0,0" VerticalAlignment="Top" Width="140" Height="49" Background="White" FontSize="29" Click="ButtonIngresar_Click"/>
        <Button Content="Registrarse" HorizontalAlignment="Left" Margin="483,321,0,0" VerticalAlignment="Top" Width="150" Height="49" FontSize="29" Background="White" Click="Button_Click"/>
    </Grid>
</Window>
